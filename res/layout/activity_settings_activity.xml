<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"

android:id="@+id/profile_layout"
        android:layout_height="80dp">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/mydp"
        android:src="@drawable/dp2"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/name_list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Profile"
        android:textSize="20sp"
        android:typeface="serif"
        android:maxLength="27"
        android:textStyle="bold"
        android:layout_alignTop="@+id/mydp"
        android:layout_alignLeft="@+id/last_msg_list"
        android:layout_alignStart="@+id/last_msg_list" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="my status here here here here here heree rereerereerere"
        android:id="@+id/last_msg_list"
        android:textStyle="italic"
        android:maxLength="50"
        android:layout_alignBottom="@+id/mydp"
        android:layout_toRightOf="@+id/mydp"
        android:layout_toEndOf="@+id/mydp"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp" />
</RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/profile_layout"></ListView>
</RelativeLayout>